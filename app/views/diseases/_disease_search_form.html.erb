<%= form_for @keyword, :url => url_for(:controller => 'diseases', :action => 'search'), :method => 'get' do |f| %>  
  <%=f.autocomplete_field :keyword, pages_autocomplete_disease_disease_name_path,
                          :class => "text round disease-search", 
                          :value => "Enter an OMIM #, disease name or initial",
                          :onclick => "$('#_keyword').get(0).value=''" %> 
  <%= f.submit "Go!", :class => "go-button" %>
<% end %>